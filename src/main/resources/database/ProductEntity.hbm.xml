<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="pl.io4.model.entities.Product" table="Product" schema="dbo" catalog="io4">
        <id name="id">
            <column name="id" sql-type="int"/>
        </id>
        <property name="name">
            <column name="name" sql-type="int"/>
        </property>
        <property name="category">
            <column name="category" sql-type="int" not-null="true"/>
        </property>
        <property name="taxRule">
            <column name="taxRule" sql-type="int" not-null="true"/>
        </property>
        <property name="price">
            <column name="price" sql-type="money"/>
        </property>
    </class>
</hibernate-mapping>